<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_black"
    tools:context=".view.activities.EndSessionActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ivSimmFinish"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/celebration_thumbs_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btFinishSession"
        android:contentDescription="@null"
        />
    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/well_done_you_finished_successfully"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btFinishSession"
        app:layout_constraintTop_toBottomOf="@+id/ivSimmFinish"
        app:layout_constraintBottom_toBottomOf="@+id/btFinishSession" />

    <Button
        android:id="@+id/btFinishSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chips"
        android:paddingEnd="40dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/finish_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>