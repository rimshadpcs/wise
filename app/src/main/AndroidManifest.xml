<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.simmone">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.example.simmone.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimmOne"
        tools:targetApi="31">

        <receiver
            android:name=".view.widgets.PlantWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/plant_widget_info" />
        </receiver>

        <activity
            android:name=".view.activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.compose.SquareDrawingActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.activities.SessionActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.activities.EndSessionActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.SimmOne.right_anim" />
        <activity
            android:name=".view.activities.OperationResultActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.SimmOne.right_anim" />
        <activity
            android:name=".view.activities.BubbleSample"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.activities.SplashScreen"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.activities.OnBoardingActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.activities.PermissionActivity"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.simmone.services.SimmTileService"
            android:exported="true"
            android:icon="@drawable/simm_cover"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="false" />

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>


        <activity
            android:name=".view.activities.StoryBoardActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>